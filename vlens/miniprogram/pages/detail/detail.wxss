.connect_box {
    width: 100%;
    height: 30px;
    line-height: 30px;
    font-size: 32rpx;
    color: #666;
    font-family: "Microsoft YaHei";
}
.connect_device_name{
    float: left;
    padding-left: 10px;
    color: #39beff;
}

.connect_state {
    float: right;
    padding-right: 10px;
    text-decoration: underline;
    color: #39beff;
}

.fan{
  width: 2rem;
  height: 2rem;
  vertical-align: middle;
  margin-left: 2.25rem;
  margin-right: 0.25rem;
}
.water{
  width: 2.5rem;
  height: 2rem;
  vertical-align: middle;
  margin-left: 2rem;
}
.name{
  width: 15%;
  float: left;
  line-height: 2rem;
  font-size: 0.9rem;
}
.key{
  margin-right: 1rem;
}
.detail_box{
  padding:  1rem 0;
  text-align: right;
  border-bottom: 1px solid #f2f2f2;
  border-top: 1px solid #f2f2f2;
  margin: 0.5rem 0;
}
.body-view{
  display: inline-block;
  width: 90%;
}
.section__title{
  display: inline-block;
  width: 10%;
  text-align: center;
  vertical-align: middle;
}
.section{
  margin: 15rpx 0;
}
.content-box{
    border-bottom: 1px solid rgba(246,246,246,1);
}
body{
    margin: 0 auto;
}
input{
    outline: none;
}
.input-box{
    width: 90%;
    margin: 0 auto;
    position: relative;
}
.content-name {
    width: 94%;
    margin-left: 3%;
    padding-top: 15px;
    padding-bottom: 14px;
}

.content-name-shu {
    display: inline-block;
    width: 3px;
    height: 16px;
    background: rgba(75, 169, 255, 1);
    border-radius: 2px;
    margin-left: 5px;
    margin-bottom: -2px;

}

.content-name-text {
    display: inline-block;
    font-size: 15px;
    color: rgba(67, 67, 67, 1);
    margin-left: 10px;
    font-weight:700;
}
.textarea{
    width: 96%;
    height: 80px;
    background-color: #f6f6f6;
    padding: 2%;
    margin: 4px auto 16px;
    font-size:15px;
    color:#282828;
    line-height:21px;
    border-radius: 4px;
    display: inherit;
    border: none;
}
.picker{
    width: 80%;
    float: right;
    height: 28px;
}
.upfile-box{
    width: 4rem;
    height: 4rem;
    background-size: 100% 100%;
    margin-bottom: 16px;
}
.select-img{
    width: 4rem;
    height: 4rem;
    background-size: 100% 100%;
    margin-bottom: 16px;
    position: absolute;
    top: 0;
}
.upfile{
    width: 4rem;
    height: 4rem;
    outline: none;
    opacity: 0;
}
.select-box{
    float: right;
    height: 2rem;
    width: 51%;
    border-radius: 4px;
    color: #282828;
    outline: none;
    padding-left: 5px;
    border: 1px solid #dddddd;
    margin-right: 5px;
  
}
.select-data{
    width: 43.5%;
    border-radius: 4px;
    color: #282828;
    height: 2rem;
    border: 1px solid #ddd;
    margin: 15px 0 7px;
    display: inline-block;
    text-align: center;
    color: rgba(67, 67, 67, 1);
    font-size: 15px;

}
.interval{
    display: inline-block;
    width: 8%;
    text-align: center;
    vertical-align: top;
    margin-top: 15px;
}
.content-name-arrow{
    float: right;
    width: 18px;
    height: 18px;
    margin:  7px 3px 0;
}
.select-res{
  float: right;
  font-size: 14px;
  color: rgba(67, 67, 67, 1);

}
.issue{
    width: 92%;
    height: 44px;
    background: rgba(75,169,255,1);
    border-radius: 4px;
    color: #fff;
    text-align: center;
    line-height: 44px;
    margin: 16px auto;
}

.wx_header {
    width: 100%;
    position: fixed;
    z-index: 999;
    box-sizing: border-box;
    top: 0px;
    padding: 20px 10px 0 10px;
    background: -webkit-linear-gradient(left,#37A0FF,#2B6EEF);
    text-align: center;
    height: 64px;
    line-height: 44px;
    padding-top: 20px;

}

.wx_header .title {
    height: 44px;
    text-align: center;
    font-size: 18px;
    color: #fff;
}
.fr{
  float: right;
}

.page-body {
    width: 92%;
    margin-left: 4%;
    border-radius: 15px;
}

.page-body image {
    width: 100%;
}

swiper, swiper-item {
    border-radius: 15rpx;
    overflow: hidden;
}

.top-part {
    background-color: #fff;
    padding-top: 24rpx;
    padding-bottom: 24rpx;
}

.icon-content {
    width: 100%;
}

.main-icon {
    width: 25%;
    float: left;
    text-align: center;
    margin-bottom: 20rpx
}

.main-icon image {
    width: 104rpx;
    height: 104rpx;
    display: block;
    margin: 0 auto;
}

.main-icon text {
    display: block;
    font-size: 26rpx;
    color: rgba(119, 119, 119, 1);
    line-height: 58rpx;
}

.middle-part {
    margin-top: 20rpx;
    background-color: #fff;
}
.select-color{
  width: 88rpx;
  height: 88rpx;
  border-radius: 100%;
  background: #37A0FF;
  margin: 0 auto;
}
.time{
  width: 28%;
  border: 1px solid #f2f2f2;
  display: inline-block;
  text-align: center;
  line-height: 60rpx;
  border-radius: 8rpx;
  vertical-align: middle;
  font-size: 32rpx;
}
.picker {
  width: 100%;
  height: auto;
}
.addColor,.deleteColor{
  color: #37A0FF;
  border: 1px solid #37A0FF;
  float: right;
  padding: 0 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}
.deleteColor{
  color: #f00;
  border: 1px solid  #f00;
}
.hint-box{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    background: rgba(67, 67, 67, 0.4);
    font-size: 28rpx;
}

.hint-content{
    position: absolute;
    width: 80%;
    padding: 30rpx 0rpx;
    min-height: 100rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background: #fff;
    border-radius: 8rpx;
    text-align: center;
}

.hint-input{
    display: inline-block;
    width: 50%;
    border: 1px solid #cccccc;
    vertical-align: middle;
}
